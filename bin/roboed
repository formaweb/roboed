#!/usr/bin/env ruby

require 'robo_ed'

RoboEd.setup do |config|
  config.strip_tags = true
end

if ARGV.include?('--say')
  question = (ARGV - ['--say']).join(' ')
  answer = RoboEd.ask(question)

  puts "ðŸ”Š\t#{answer}"
  `say "#{answer.gsub('"', '')}"`
else
  puts RoboEd.ask(ARGV.join(' '))
end
